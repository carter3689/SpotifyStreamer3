<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:gravity="center_vertical">

    <FrameLayout
        android:layout_width="@dimen/list_item_height"
        android:layout_height="wrap_content"
        android:padding="@dimen/list_item_padding">

        <ImageView
            android:maxWidth="@dimen/list_item_image_size"
            android:maxHeight="@dimen/list_item_image_size"
            android:src="@drawable/ic_av_album"
            android:id="@+id/list_item_image_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_name_track"
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/list_item_padding"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            tools:text="Yellow"
            />

        <TextView
            android:id="@+id/list_item_name_album"
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/list_item_padding"
            tools:text="Parachutes"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>